    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        // pytest current file
        {
            "name": "Python: Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },     
        
        // pytest all
        {
            "name": "Python: Pytest All",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": [
                "${workspaceFolder}/tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}